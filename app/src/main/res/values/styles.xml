<resources>
    <style name="TabTextAppearance" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Диалог в стиле DanaBala -->
    <style name="DanaBalaAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleIconStyle">@style/DanaBalaDialogTitle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DanaBalaDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DanaBalaDialogBody</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <!-- Убрали кастомный drawable-фон -->
    </style>

    <style name="DanaBalaDialogTitle" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DanaBalaDialogBody" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
