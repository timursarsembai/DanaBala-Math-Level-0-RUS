<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/child_gradient_yellow"
    android:padding="16dp"
    tools:context=".NumberRecognitionActivity">

    <!-- Верхняя панель с кнопкой назад, заголовком и прогресс-баром -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Кнопка назад -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Назад" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔢 Найди цифру"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:layout_marginStart="12dp"
            android:gravity="start" />

    </LinearLayout>

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:progress="5"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#E0E0E0" />

    <!-- Loading индикатор -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="#4CAF50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подготовка задания..."
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- Контейнер с вопросом и карточками -->
    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Вопрос -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#FFEBEE"
            android:padding="16dp"
            android:elevation="4dp" />

        <!-- Кнопка динамика для озвучивания -->
        <ImageView
            android:id="@+id/speakerButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/speaker_button_background"
            android:src="@drawable/ic_volume_up"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Повторить вопрос"
            android:elevation="6dp" />

        <!-- Сетка карточек с цифрами (2x2) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Первый ряд -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Карточка 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/number1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Карточка 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/number2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Второй ряд -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Карточка 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/number3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Карточка 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/number4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
