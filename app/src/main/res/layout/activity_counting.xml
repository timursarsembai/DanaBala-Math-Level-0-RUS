<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/child_gradient_background"
    tools:context=".CountingActivity">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Кнопка "Назад" -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Назад" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔍 Найди количество"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginStart="12dp"
            android:gravity="start" />

    </LinearLayout>

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:progress="5"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#E0E0E0" />

    <!-- Loading индикатор -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="#4CAF50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подготовка задания..."
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- Контейнер с вопросом и карточками -->
    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Область вопроса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сколько предметов?"
                android:textSize="18sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp" />

            <!-- Число для счета -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E3F2FD">

                <TextView
                    android:id="@+id/questionNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Сетка карточек с вариантами ответов (2x2) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Первый ряд -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Карточка 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/answer1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="🍎🍎🍎"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:lineSpacingExtra="2dp" />

                </androidx.cardview.widget.CardView>

                <!-- Карточка 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/answer2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="🍎🍎🍎🍎🍎"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:lineSpacingExtra="2dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Второй ряд -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Карточка 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/answer3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="🍎🍎"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:lineSpacingExtra="2dp" />

                </androidx.cardview.widget.CardView>

                <!-- Карточка 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/answer4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="🍎🍎🍎🍎🍎🍎🍎"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:lineSpacingExtra="2dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
