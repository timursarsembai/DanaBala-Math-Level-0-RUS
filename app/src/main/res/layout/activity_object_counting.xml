<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/child_gradient_background"
    tools:context=".ObjectCountingActivity">

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Кнопка "Назад" -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Назад" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🧮 Посчитай предметы"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginStart="12dp"
            android:gravity="start" />

    </LinearLayout>

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:progress="5"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#E0E0E0" />

    <!-- Loading индикатор -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="#4CAF50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подготовка задания..."
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- Контейнер с вопросом и карточками -->
    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Область вопроса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сколько ты видишь яблок?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- Предметы для подсчета -->
            <TextView
                android:id="@+id/questionObjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍎🍎🍎"
                android:textSize="48sp"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/child_gradient_yellow"
                android:layout_marginBottom="8dp"
                android:minHeight="120dp"
                android:minWidth="200dp" />

        </LinearLayout>

        <!-- Варианты ответов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Первая строка ответов -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/answer1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/answer2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Вторая строка ответов -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/answer3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/answer4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/answerText4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
